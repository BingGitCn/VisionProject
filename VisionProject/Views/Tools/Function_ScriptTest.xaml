<UserControl x:Class="VisionProject.Views.Function_ScriptTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
            xmlns:bingVision="clr-namespace:BingLibrary.Vision;assembly=BingLibrary.Vision"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="960" Height="690">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="270"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <bingVision:BingImageWindow x:Name="aimg"></bingVision:BingImageWindow>
        </Grid>

        <Grid Grid.Column="1">
            <StackPanel Orientation="Vertical">
                <hc:ComboBox Margin="5" Style="{StaticResource ComboBoxExtend}" ItemsSource="{Binding IOVariables1}" SelectedIndex="{Binding IOIndex1}" hc:InfoElement.Title="输入控制参数" hc:InfoElement.TitleWidth="100"  hc:InfoElement.TitlePlacement="Left" ></hc:ComboBox>
                <hc:ComboBox Margin="5" Style="{StaticResource ComboBoxExtend}" ItemsSource="{Binding IOVariables2}" SelectedIndex="{Binding IOIndex2}" hc:InfoElement.Title="输入图形参数" hc:InfoElement.TitleWidth="100"  hc:InfoElement.TitlePlacement="Left" ></hc:ComboBox>
                <hc:ComboBox Margin="5" Style="{StaticResource ComboBoxExtend}" ItemsSource="{Binding IOVariables3}" SelectedIndex="{Binding IOIndex3}" hc:InfoElement.Title="输出控制参数" hc:InfoElement.TitleWidth="100"  hc:InfoElement.TitlePlacement="Left" ></hc:ComboBox>
                <hc:ComboBox Margin="5" Style="{StaticResource ComboBoxExtend}" ItemsSource="{Binding IOVariables4}" SelectedIndex="{Binding IOIndex4}" hc:InfoElement.Title="输出图形参数" hc:InfoElement.TitleWidth="100"  hc:InfoElement.TitlePlacement="Left" ></hc:ComboBox>


                <StackPanel Orientation="Horizontal">
                    <Button Margin="5" Width="100" Style="{StaticResource ButtonPrimary}" Content="保存参数" ></Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>