<prism:PrismApplication
    x:Class="VisionProject.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:location="clr-namespace:BingLibrary.Location;assembly=BingLibrary.Location">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <x:Static x:Key="BingLocation" Member="location:LanguageManager.Instance" />
            <location:LanguageConverter x:Key="LanguageConverter" />
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>